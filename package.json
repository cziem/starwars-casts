{
  "name": "starwars-casts",
  "version": "0.0.0-development",
  "description": "Get name of a starwar character",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "istanbul cover -x *.test.js _mocha -- -R spec src/tests/index.test.js",
    "test:watch": "mocha src/tests/index.test.js -w",
    "semantic-release": "semantic-release",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phavor/starwars-casts.git"
  },
  "keywords": [
    "NPM",
    "GitHub",
    "Testing",
    "Libraries"
  ],
  "author": "Favour George <phavorsparks@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phavor/starwars-casts/issues"
  },
  "homepage": "https://github.com/phavor/starwars-casts#readme",
  "dependencies": {
    "unique-random-array": "1.0.1"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "codecov.io": "0.1.6",
    "commitizen": "3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "ghooks": "2.0.4",
    "istanbul": "0.4.5",
    "mocha": "5.2.0",
    "semantic-release": "^15.13.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  }
}
